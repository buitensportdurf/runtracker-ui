<FbfDataTable
  @hasFixedLeftColumns={{true}}
  @fixedLeftWidth={{3}}
  @rowHeight="medium"
  class="rt-run-list"
  as |components|
>
  <components.body>
    <FbfDataTableRow>
      <FbfDataTableHeader @isFixedLeft={{true}}>
        City
      </FbfDataTableHeader>
      <FbfDataTableHeader>
        Date
      </FbfDataTableHeader>
      <FbfDataTableHeader>
        Travel time
      </FbfDataTableHeader>
      <FbfDataTableHeader>
        Competitions
      </FbfDataTableHeader>
      <FbfDataTableHeader>
        Distances
      </FbfDataTableHeader>
      <FbfDataTableHeader @minWidth={{250}}>
        Organizer
      </FbfDataTableHeader>
    </FbfDataTableRow>
    {{#each @model as |run|}}
      <RunsListItem @model={{run}}/>
    {{/each}}
  </components.body>
</FbfDataTable>
