<FbfProfilePicture
  @showUser={{true}}
  @src={{if @model.hasProfilePicture @model.profilePictureSrc}}
  @colorSeed={{@model.id}}
  @content={{@model.fullName}}
  @id={{this.tooltipId}}
  {{did-insert (fn @model.preloadProfilePicture)}}
/>
{{#if @hasTooltip}}
  <FbfTooltip @for={{this.tooltipId}}>
    {{@model.fullName}}
  </FbfTooltip>
{{/if}}
